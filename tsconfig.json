{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@prisma/type-graphql": ["prisma/type-graphql/index.ts"],
      "@test/utils": ["test-utils/index.ts"],
      "@prisma/factories": ["prisma/factories/index.ts"],
    },
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "prisma/**/*", "src/types/module.d.ts"],
}

